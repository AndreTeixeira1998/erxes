{
  "name": "@erxes/plugin-payment-api",
  "version": "1.0.0",
  "scripts": {
    "dev": "nodemon src/index.ts",
    "dev:client": "yarn dev-server & yarn dev-webpack",
    "dev-server": "NODE_ENV=development nodemon -e ts --project tsconfig.server.json server --exec ts-node",
    "dev-webpack": "webpack --mode development --watch --progress",
    "build": "yarn build-webpack && yarn build-server",
    "build-server": "tsc --project tsconfig.server.json && cp -r ./server/views/ ./dist/",
    "build-webpack": "webpack --mode production --config=webpack.prod.config.js"
  },
  "dependencies": {
    "@erxes/api-utils": "*",
    "i18n": "^0.15.1",
    "pug": "^2.0.4",
    "qrcode": "^1.5.0",
    "react": "^16.14.0",
    "react-dom": "^16.11.0",
    "@apollo/client": "~3.7.14",
    "graphql-ws": "^5.11.2",
    "babel-loader": "^8.2.1",
    "babel-polyfill": "^6.26.0",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-transform-runtime": "^7.11.5",
    "styled-components": "^5.3.11",
    "styled-components-ts": "^0.0.15",
    "react-modal":"3.16.1",
    "compression-webpack-plugin": "9.2.0",
    "dotenv-webpack": "^1.7.0",
    "terser-webpack-plugin": "^5.3.1",
    "webpack": "^5.57.1",
    "webpack-cli": "^4.9.0",
    "webpack-merge": "^4.1.3"
  },
  "devDependencies": {
    "ts-node": "^8.4.1",
    "@types/react": "^16.4.13",
    "@types/react-dom": "^16.0.7",
    "typescript": "^4.0.5",
    "@babel/cli": "^7.11.6",
    "@babel/core": "^7.11.6",
    "@babel/preset-env": "^7.11.5",
    "@babel/preset-react": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "style-loader": "3.3.4",
    "css-loader": "5.0.1"
  }
}
